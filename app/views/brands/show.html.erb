<% provide(:title, @brand.name) %>

<div class="center">
  <%= link_to image_tag(@brand.image.url(:medium)), @brand.image.url(:thumb) %>
</div>

<ul class="brands">
  <% @brand.products.each do |product| %>
    <li>
      <%= link_to image_tag(product.image.url(:thumb)), product %>
      <div><%= link_to product.name, product %></div>
    </li>
  <% end %>
</ul>