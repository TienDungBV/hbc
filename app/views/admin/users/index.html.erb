<%= provide(:title, "All Users") %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 40 %>
      <%= link_to user.name, admin_user_path(user) %> | 
      <%= link_to "Delete", admin_user_path(user), method: :delete, 
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>